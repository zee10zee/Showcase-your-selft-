

 <%- include("partials/header"); %>

 <div class="container mt-5">
   
    <form action="/posts/<%=post._id %>/update?_method=PUT" method="POST">
        <h2>Update <%= post.title %></h2>
       <div class="form-group">
           <label for="title"><h3>Title</h3></label>       
           <input type="text" placeholder="place the tile here !" name="title" required  
           class="form-control" value="<%=post.title %>">
       </div>

       <div class="form-group">
         <label for="image"><h3>Image Url</h3></label>       
         <input type="text" placeholder="place the image url here !" name="image" required 
         class="form-control" value = "<%= post.image %>">
     </div>

     <div class="form-group">
         <label for="content"><h3>Description</h3></label>       
        <textarea name="content" id="content" cols="30" rows="6"  required 
        class="form-control"><%= post.content %></textarea>
     </div>
     <div class="form-group">
        <label for="location">price</label>
        <input class="form-control" type="number" name="price" id="price" 
        value="<%= post.price %>">
    </div>

     <div class="form-group">
        <input type="submit" class="btn btn-success" value="Save">
     </div>
    </form>
</div>


 <%- include("partials/footer"); %>